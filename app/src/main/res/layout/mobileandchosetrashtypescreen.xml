<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:weightSum="1"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="0.8"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:weightSum="1"
    android:layout_height="0dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.3"
        android:gravity="center_vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="150dp"
                android:src="@drawable/maxlogo"
                android:layout_marginLeft="35dp"

                android:layout_height="150dp">

            </ImageView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.7"
        android:weightSum="1"
        android:gravity="center|right"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="0.9"
                        android:background="@drawable/outline"
                        android:gravity="center">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:maxLines="1"
                            android:focusable="false"
                            android:editable="false"
                            android:id="@+id/printnumbber"
                            android:maxLength="13"
                            android:inputType="none"
                            android:hint="@string/entermobilenumber"
                            android:textColor="@color/white"
                            android:textColorHint="@color/white"
                            android:textSize="25dp"
                            android:textStyle="bold">

                        </EditText>
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.8"
                    android:layout_marginRight="35dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                           >

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@color/green"
                                android:text="7"
                                android:id="@+id/seven"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="8"
                                android:background="@color/green"
                                android:id="@+id/eight"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="9"
                                android:background="@color/green"
                                android:id="@+id/nine"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="4"
                                android:background="@color/green"
                                android:id="@+id/four"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="5"
                                android:id="@+id/five"
                                android:background="@color/green"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="6"
                                android:id="@+id/six"
                                android:background="@color/green"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="1"
                                android:id="@+id/one"
                                android:background="@color/green"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="2"
                                android:background="@color/green"
                                android:id="@+id/two"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="3"
                                android:id="@+id/three"
                                android:background="@color/green"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="+"
                                android:background="@color/green"
                                android:id="@+id/plus"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="0"
                                android:background="@color/green"
                                android:id="@+id/zero"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:layout_weight="0.3"
                            android:background="@color/green">

                            <Button
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="DEL"
                                android:background="@color/green"
                                android:id="@+id/del"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_margin="4dp"
                        android:layout_weight="0.2"
                        android:gravity="center"

                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.91"
                            android:background="@color/green"
                            android:gravity="center">

                            <Button
                                android:layout_width="55dp"
                                android:layout_height="55dp"
                                android:text="@string/ok"
                                android:id="@+id/ok"
                                android:background="@color/green"
                                android:textColor="@color/white"
                                android:textSize="34sp"
                                android:textStyle="bold">

                            </Button>
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:gravity="center"
            android:layout_marginTop="35dp"
            android:weightSum="1"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.6">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="@string/plastic"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:id="@+id/Plastic"
                        android:onClick="PLasticButton"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.05"
                    android:layout_height="0dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:id="@+id/glasas"
                    android:background="@color/green"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="@string/glass"
                        android:id="@+id/glass"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.05"
                    android:layout_height="0dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="@string/tincans"
                        android:id="@+id/tin"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.05"
                    android:layout_height="0dp">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_weight="0.2"
                    android:layout_margin="5dp"
                    android:background="@color/green"
                    android:layout_height="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:gravity="center"
                        android:text="@string/otherwaste"
                        android:id="@+id/others"
                        android:textStyle="bold"
                        android:textSize="34sp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent">

                    </TextView>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="0.2"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="6"
        android:layout_height="0dp">
<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">

</LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:textSize="34dp"
    android:textColor="#CDDC39"
    android:textStyle="bold"
    android:gravity="center"
    android:text="@string/hotel"
    android:layout_height="match_parent">

</TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:background="#CDDC39"
            android:layout_height="match_parent">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="34dp"
                android:textColor="#CDDC39"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/flight"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:background="#CDDC39"
            android:layout_height="match_parent">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="34dp"
                android:textColor="#CDDC39"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/mobilerecharge"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <View
            android:layout_width="3dp"
            android:background="#CDDC39"
            android:layout_height="match_parent">

        </View>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:textSize="34dp"
                android:textColor="#CDDC39"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/billpayment"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">

        </LinearLayout>
    </LinearLayout>
</LinearLayout>